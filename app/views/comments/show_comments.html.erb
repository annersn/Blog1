<table>
  <thead>
    <tr>
      <th>Owner</th>
      <th>Email</th>
      <th>Comment</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
    	<% if comment.id != nil %>
      		<tr>
        		<td><%= comment.owner %></td>
        		<td><%= comment.email %></td>
        		<td><%= comment.comment %></td>
        		<td><%= link_to 'Destroy', post_comment_path(@post,comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      	</tr>
      <% end %>
    <% end %>
  </tbody>
</table>